<?xml version="1.0" encoding="UTF-8"?>
<!-- Sql Mapper -->
<!DOCTYPE mapper
PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
"http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.beans.roaststars.model.mapper.CafeMapper">
	
	<!-- has a 관계를 위한 userVO resultMap -->
	<resultMap type="cafeVO" id="cafeUserRM">
		<result property="userVO.id" column="id"/>
		<result property="userVO.password" column="password"/>
		<result property="userVO.name" column="name"/>
		<result property="userVO.nickname" column="nickname"/>
		<result property="userVO.tel" column="tel"/>
		<result property="userVO.address" column="address"/>
		<result property="userVO.enabled" column="enabled"/>
	</resultMap>
	
	<!-- has a 관계를 위한 cafeOperatingTime resultMap -->
	<resultMap type="cafeVO" id="cafeOperRM" extends="cafeUserRM">
		<result property="cafeOperatingTimeVO.weekdayTime" column="weekday_time"/>
		<result property="cafeOperatingTimeVO.weekendTime" column="weekend_time"/>
		<result property="cafeOperatingTimeVO.holidayTime" column="holiday_time"/>
	</resultMap>
	
	<!-- cafe_no로 cafeVO 정보 반환받기(+userVO까지) -->
	<select id="findCafeByCafeNo" resultType="cafeVO" resultMap="cafeOperRM">
		SELECT  *
		FROM    rs_user r, cafe c, operating_time o
		WHERE   r.id = c.id AND c.cafe_no = o.cafe_no AND c.cafe_no=#{value}
	</select>
	
	<resultMap type="cafeVO" id="cafeListRM">
		<result column="id" property="userVO.id"/>
	</resultMap>
 	<select id="findListByLoc" resultMap="cafeListRM" parameterType="string">
 		select cafe_no, cafe_name, cafe_loc, cafe_pic, cafe_info, cafe_tel, id
 		from cafe
 		where cafe_loc=#{value}
 	</select>
 	
</mapper>